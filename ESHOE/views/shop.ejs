<html>
<head>
  <title>Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    
    /* Some CSS to style the shop items */
    #shop-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    /* Individual shop item */
    .shop-item {
        width: 300px;
        margin: 10px;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
    /* Item header */
    .shop-item h3 {
        margin-top: 0;
        margin-bottom: 10px;
    }
    /* Item details */
    .shop-item p {
        margin-bottom: 10px;
    }
 
   
  </style>
</head>
<body>
  <div id="shop-container">
    <% shoes.forEach(shoe => { %>
      <div class="shop-item">
        <h3><%= shoe.name %></h3>
        <p>Size: <%= shoe.size %></p>
        <p>Price: <%= shoe.price %></p>
        <img src="<%= shoe.image %>" alt="<%= shoe.name %>">
      </div>
    <% }); %>
  </div>
</body>
</html>

<script>
// Make an HTTP GET request to your server's API endpoint to retrieve the data
fetch('http://localhost:3000/api/shoes')
    .then(response => response.json()) // Parse the response as JSON
    .then(data => {
        // Loop through the array of shoes and insert them into the HTML
        for (let i = 0; i < data.length; i++) {
            let shoe = data[i];
            let shoeDiv = document.createElement("div");
            shoeDiv.innerHTML = `
                <h3>${shoe.name}</h3>
                <p>Size: ${shoe.size}</p>
                <p>Price: ${shoe.price}</p>
            `;
            document.getElementById("shop-container").appendChild(shoeDiv);
        }
    })
    .catch(error => console.error(error));
    
